<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:padding="@dimen/_4sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProfileReceived"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:background="@drawable/background"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/textMessageReceived"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_message_received"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:text="Hello How are you"
        android:layout_marginLeft="@dimen/_4sdp"
        app:layout_constraintStart_toEndOf="@id/imageProfileReceived"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/textDateRecieved"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12:00pm"
        android:textColor="@color/secondary"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@id/textMessageReceived"
        app:layout_constraintTop_toBottomOf="@id/textMessageReceived" />
</androidx.constraintlayout.widget.ConstraintLayout>